generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Dinosaur {
  id String @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name String @unique
  genus String?
  species String?
  description String?
  hasFeathers Boolean @default(true)
  weightInKilos Float
  heightInMeters Float
  imageUrl String?
  trivia String[]
  updatedAt DateTime @updatedAt
}
